<div class="container animated fadeIn">

  {{#if model.length}}

  <div class="container">

    <div class="col-lg-12 table-responsive">
      <div class="row">

        <div class="col-lg-6">
          <h3>Pessoas</h3>
        </div>

        <div class="col-lg-6">
        {{#link-to "pessoas/new"class="btn btn-default btn-md pull-right"}}
          <i class="fa fa-file"></i>&nbsp;Novo registro
        {{/link-to}}
        </div>

      </div>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Sincronizado LIS</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each model as |pessoa index|}}
          <tr>
            <td>{{pessoa.nome}}</td>
            <td>{{pessoa.tipoPessoa.nome}}</td>
            <td>{{boolean-to-sim-nao pessoa.sincronizado}}</td>
            <td>{{#link-to "pessoas/show" pessoa.id class="btn btn-default"}}Visualizar{{/link-to}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <div class="pagination-center text-center">
  {{bootstrap/dynamic-pagination
    class="pagination"
    actionOnClick="actPaginar"
    totalPaginas=pagination.total_pages
    paginaAtual=pagination.current_page
    mostrarProximoAnterior=true}}
  </div>

  {{else}}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="error-template">
                    <h1>
                        Não há pessoas a serem listadas</h1>
                    <div class="text-center">
                        Nenhum registro foi encontrado.
                    </div>
                    <div class="error-actions">
                      {{#link-to "pessoas/new" class="btn btn-primary btn-lg"}} Cadastrar pessoa {{/link-to}}
                      {{#link-to "index" class="btn btn-default btn-lg"}} Voltar {{/link-to}}
                    </div>
                </div>
            </div>
        </div>
    </div>

  {{/if}}

</div>
