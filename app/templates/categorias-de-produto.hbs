<div class="container geral-grid animated fadeInUp">
  {{#if model.length}}

  <div class="container">

    <div class="col-lg-12 table-responsive">

      <div class="row">

        <div class="col-lg-6">
          <h3>Categorias de produto</h3>
        </div>

        <div class="col-lg-6">
        {{#link-to "cadastrar-categoria-de-produto"class="btn btn-default btn-md pull-right"}}
          <i class="fa fa-file"></i>&nbsp;Novo registro
        {{/link-to}}
        </div>
      </div>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Descrição</th>
          </tr>
        </thead>
        <tbody>
          {{#each model as |categoriaProduto index|}}
          <tr>
            <td>{{categoriaProduto.nome}}</td>
            <td>{{categoriaProduto.descricao}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <div class="pagination-center text-center">
  {{bootstrap/dynamic-pagination
    class="pagination"
    actionOnClick="actPaginar"
    totalPaginas=pagination.total_pages
    paginaAtual=pagination.current_page
    mostrarProximoAnterior=true}}
  </div>

  {{else}}

  <div class="container">
      <div class="row">
          <div class="col-md-12">
              <div class="error-template">
                  <h1>
                      Não há categorias de produto a serem listadas</h1>
                  <div class="text-center">
                      Nenhum registro foi encontrado.
                  </div>
                  <div class="error-actions">
                    {{#link-to "cadastrar-categoria-de-produto" class="btn btn-primary btn-lg"}} Cadastrar nova categoria de  produto {{/link-to}}
                    {{#link-to "index" class="btn btn-default btn-lg"}} Voltar {{/link-to}}
                  </div>
              </div>
          </div>
      </div>
  </div>

  {{/if}}
</div>
