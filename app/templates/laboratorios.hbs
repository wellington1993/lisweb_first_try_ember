<div class="container animated fadeInUp">

  {{#if model.laboratorios.length}}
  <div class="container">

    <div class="col-lg-12 table-responsive">
      <div class="row">

        <div class="col-lg-12">
          {{#if applicationSession.laboratorioAtual}}
          <h3>Laboratório atual: <b>{{applicationSession.laboratorioAtual.nome}}</b></h3>
          {{/if}}
        </div>

      </div>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Laboratórios</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each model.laboratorios as |laboratorio index|}}
          <tr>
            <td>{{laboratorio.id}}</td>
            <td>{{laboratorio.nome}}</td>
            <td><button class="btn btn-default" {{action "actEscolherLaboratorio" laboratorio.id}}>Escolher</button></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>


  <div class="pagination-center text-center">
  {{bootstrap/dynamic-pagination
    class="pagination"
    actionOnClick="actPaginar"
    totalPaginas=pagination.total_pages
    paginaAtual=pagination.current_page
    mostrarProximoAnterior=true}}
  </div>

  {{else}}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="error-template">
                    <h1>
                        Não há laboratórios a serem listados</h1>
                    <div class="text-center">
                        Nenhum registro foi encontrado.
                    </div>
                    <div class="error-actions">
                      {{#link-to "index" class="btn btn-primary btn-lg"}} Continuar {{/link-to}}
                    </div>
                </div>
            </div>
        </div>
    </div>

  {{/if}}
</div>

{{bootstrap/modals/escolha-laboratorio
  id="modal-escolher-laboratorio"
  laboratorio=laboratorioEscolhaModal}}
