<div class="container">
  <h1>Listagem de laboratórios</h1>

  {{#if applicationSession.laboratorioAtual}}
  Laboratório atual: {{applicationSession.laboratorioAtual.nome}}
  {{/if}}

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Laboratórios</th>
        <th>Escolher</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.laboratorios as |laboratorio index|}}
      <tr>
        <td>{{laboratorio.nome}}</td>
        <td><button {{action "actEscolherLaboratorio" laboratorio.id}}>Escolher</button></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{bootstrap/dynamic-pagination
  class="pagination"
  actionOnClick="actPaginar"
  totalPaginas=pagination.total_pages
  paginaAtual=pagination.current_page
  mostrarProximoAnterior=true}}

{{bootstrap/modals/escolha-laboratorio
  id="modal-escolher-laboratorio"
  laboratorio=laboratorioEscolhaModal}}
