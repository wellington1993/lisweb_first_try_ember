<div class="container animated fadeInUp">

  {{#if model.length}}

  {{#link-to "cadastrar-unidade-de-medida"}} Cadastrar Unidade de Medida {{/link-to}}

  <div class="container">
    <h1>Listagem de Unidades de Medida</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Descrição</th>
          <th>Sigla</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |unidadeMedida index|}}
        <tr>
          <td>{{unidadeMedida.nome}}</td>
          <td>{{unidadeMedida.descricao}}</td>
          <td>{{unidadeMedida.sigla}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="pagination-center text-center">
  {{bootstrap/dynamic-pagination
    class="pagination"
    actionOnClick="actPaginar"
    totalPaginas=pagination.total_pages
    paginaAtual=pagination.current_page
    mostrarProximoAnterior=true}}
  </div>

  {{else}}

  <div class="container">
      <div class="row">
          <div class="col-md-12">
              <div class="error-template">
                  <h1>
                      Não há unidades de medida a serem listadas</h1>
                  <div class="text-center">
                      Nenhum registro foi encontrado.
                  </div>
                  <div class="error-actions">
                    {{#link-to "cadastrar-unidade-de-medida" class="btn btn-primary btn-lg"}} Cadastrar nova unidade de medida {{/link-to}}
                    {{#link-to "index" class="btn btn-default btn-lg"}} Voltar {{/link-to}}
                  </div>
              </div>
          </div>
      </div>
  </div>

  {{/if}}

</div>
