<div class="container animated fadeIn">

  {{#if model.length}}

  <div class="container">

    <div class="col-lg-12 table-responsive">
      <div class="row">

        <div class="col-lg-6">
          <h3>Unidades de medida</h3>
        </div>

        <div class="col-lg-6">
        {{#link-to "unidades-de-medida/new"class="btn btn-default btn-md pull-right"}}
          <i class="fa fa-file"></i>&nbsp;Novo registro
        {{/link-to}}
        </div>
      </div>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Sigla</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each model as |unidadeMedida index|}}
          <tr>
            <td>{{unidadeMedida.nome}}</td>
            <td>{{unidadeMedida.descricao}}</td>
            <td>{{unidadeMedida.sigla}}</td>
            <td>{{#link-to "unidades-de-medida/show" unidadeMedida.id class="btn btn-default"}}Visualizar{{/link-to}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <div class="pagination-center text-center">
  {{bootstrap/dynamic-pagination
    class="pagination"
    actionOnClick="actPaginar"
    totalPaginas=pagination.total_pages
    paginaAtual=pagination.current_page
    mostrarProximoAnterior=true}}
  </div>

  {{else}}

  <div class="container">
      <div class="row">
          <div class="col-md-12">
              <div class="error-template">
                  <h1>
                      Não há unidades de medida a serem listadas</h1>
                  <div class="text-center">
                      Nenhum registro foi encontrado.
                  </div>
                  <div class="error-actions">
                    {{#link-to "unidades-de-medida/new" class="btn btn-primary btn-lg"}} Cadastrar nova unidade de medida {{/link-to}}
                    {{#link-to "index" class="btn btn-default btn-lg"}} Voltar {{/link-to}}
                  </div>
              </div>
          </div>
      </div>
  </div>

  {{/if}}

</div>
